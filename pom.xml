<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.alpharogroup</groupId>
		<artifactId>mvn-java-parent</artifactId>
		<version>3.3.0</version>
		<relativePath></relativePath>
	</parent>

	<artifactId>mystic-crypt</artifactId>
	<version>4.25.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<inceptionYear>2015</inceptionYear>

	<name>${project.artifactId}</name>

	<description>
		The target of this parent project is to make encryption and decryption as simple as possible.
	</description>

	<url>https://github.com/astrapi69/mystic-crypt</url>

	<properties>
		<!-- NEW EXTENSIONS LIB versions -->
		<file-worker.version>4.18.0</file-worker.version>
		<jcommons-lang.version>4.28.0</jcommons-lang.version>
		<test-objects.version>4.19.0</test-objects.version>
		<silly-collections.version>4.21.1</silly-collections.version>
		<vintage-time.version>4.11.0</vintage-time.version>
		<!-- RESOURCEBUNDLE-CORE versions -->
		<resourcebundle-inspector.version>2.16.0</resourcebundle-inspector.version>
		<!-- JOBJECT-EXTENSIONS versions -->
		<jobject-extensions.version>1.6.0</jobject-extensions.version>
		<jobject-core.version>${jobject-extensions.version}</jobject-core.version>
		<!-- PARENT PROJECT versions -->
		<randomizer.version>${project.version}</randomizer.version>
		<crypt-data.version>${project.version}</crypt-data.version>
		<!-- EXTERNAL LIBRARIES versions -->
		<commons-codec.version>1.10</commons-codec.version>
		<bouncycastle.version>1.55</bouncycastle.version>
		<!-- GUAVA version -->
		<guava.version>23.0</guava.version>
	</properties>

	<modules>
		<module>auth-security</module>
		<module>crypt-core</module>
		<module>randomizer</module>
		<module>crypt-data</module>
	</modules>

	<developers>

		<developer>
			<id>astrapi69</id>
			<name>Asterios Raptis</name>
			<roles>
				<role>Project manager</role>
				<role>Developer</role>
			</roles>
			<timezone>Berlin</timezone>
		</developer>

	</developers>

	<scm>
		<connection>scm:git:git:@github.com:astrapi69/mystic-crypt.git</connection>
		<developerConnection>scm:git:git@github.com:astrapi69/mystic-crypt.git</developerConnection>
		<url>git:@github.com:astrapi69/mystic-crypt.git</url>
	</scm>

	<issueManagement>
		<system>github.com</system>
		<url>https://github.com/astrapi69/mystic-crypt/issues</url>
	</issueManagement>

	<dependencyManagement>

		<dependencies>
			<!-- RESOURCEBUNDLE-CORE DEPENDENCIES -->
			<dependency>
				<groupId>de.alpharogroup</groupId>
				<artifactId>resourcebundle-inspector</artifactId>
				<version>${resourcebundle-inspector.version}</version>
			</dependency>

			<dependency>
				<groupId>commons-codec</groupId>
				<artifactId>commons-codec</artifactId>
				<version>${commons-codec.version}</version>
			</dependency>
			<!-- NEW EXTENSIONS LIB DEPENDENCIES -->
			<dependency>
				<groupId>de.alpharogroup</groupId>
				<artifactId>silly-collections</artifactId>
				<version>${silly-collections.version}</version>
			</dependency>

			<dependency>
				<groupId>de.alpharogroup</groupId>
				<artifactId>jcommons-lang</artifactId>
				<version>${jcommons-lang.version}</version>
			</dependency>

			<dependency>
				<groupId>de.alpharogroup</groupId>
				<artifactId>test-objects</artifactId>
				<version>${test-objects.version}</version>
			</dependency>

			<dependency>
				<groupId>de.alpharogroup</groupId>
				<artifactId>file-worker</artifactId>
				<version>${file-worker.version}</version>
			</dependency>

			<dependency>
				<groupId>de.alpharogroup</groupId>
				<artifactId>vintage-time</artifactId>
				<version>${vintage-time.version}</version>
			</dependency>

			<dependency>
				<groupId>de.alpharogroup</groupId>
				<artifactId>randomizer</artifactId>
				<version>${randomizer.version}</version>
			</dependency>

			<dependency>
				<groupId>de.alpharogroup</groupId>
				<artifactId>crypt-data</artifactId>
				<version>${crypt-data.version}</version>
			</dependency>

			<dependency>
				<groupId>org.bouncycastle</groupId>
				<artifactId>bcprov-jdk15on</artifactId>
				<version>${bouncycastle.version}</version>
			</dependency>

			<dependency>
				<groupId>org.bouncycastle</groupId>
				<artifactId>bcprov-ext-jdk15on</artifactId>
				<version>${bouncycastle.version}</version>
			</dependency>

			<dependency>
				<groupId>org.bouncycastle</groupId>
				<artifactId>bcpkix-jdk15on</artifactId>
				<version>${bouncycastle.version}</version>
			</dependency>
			<!-- GUAVA DEPENDENCY -->
			<dependency>
				<groupId>com.google.guava</groupId>
				<artifactId>guava</artifactId>
				<version>${guava.version}</version>
			</dependency>
			<!-- JOBJECT-EXTENSIONS DEPENDENCIES -->
			<!-- JOBJECT-CORE DEPENDENCY -->
			<dependency>
				<groupId>de.alpharogroup</groupId>
				<artifactId>jobject-core</artifactId>
				<version>${jobject-core.version}</version>
			</dependency>

		</dependencies>

	</dependencyManagement>

	<build>

		<resources>

			<resource>
				<filtering>false</filtering>
				<directory>src/main/java</directory>
				<includes>
					<include>**</include>
				</includes>
				<excludes>
					<exclude>**/*.java</exclude>
					<exclude>**/package.html</exclude>
				</excludes>
			</resource>

			<resource>
				<filtering>false</filtering>
				<directory>src/main/resources</directory>
			</resource>

			<resource>
				<filtering>false</filtering>
				<directory>src/site</directory>
			</resource>

		</resources>

		<testResources>

			<testResource>
				<filtering>false</filtering>
				<directory>src/test/java</directory>
				<includes>
					<include>**</include>
				</includes>
				<excludes>
					<exclude>**/*.java</exclude>
					<exclude>**/package.html</exclude>
				</excludes>
			</testResource>
			<testResource>
				<filtering>false</filtering>
				<directory>src/test/resources</directory>
			</testResource>

		</testResources>

		<pluginManagement>

			<plugins>

				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>cobertura-maven-plugin</artifactId>
					<configuration>
						<instrumentation>
							<excludes>
								<!-- enums -->
								<exclude>de/alpharogroup/crypto/enums/**/*.class</exclude>
								<exclude>de/alpharogroup/auth/enums/**/*.class</exclude>
								<exclude>de/alpharogroup/crypto/algorithm/**/*.class</exclude>
								<exclude>de/alpharogroup/crypto/enums/**/*.class</exclude>
								<exclude>de/alpharogroup/crypto/mechanisms/**/*.class</exclude>
								<exclude>de/alpharogroup/crypto/modes/**/*.class</exclude>
								<exclude>de/alpharogroup/crypto/padding/**/*.class</exclude>
								<exclude>de/alpharogroup/crypto/provider/**/*.class</exclude>
								<exclude>de/alpharogroup/crypto/pw/**/*.class</exclude>
								<!-- beans -->
								<exclude>de/alpharogroup/auth/models/**/*.class</exclude>
								<exclude>de/alpharogroup/auth/token/**/*.class</exclude>
								<exclude>de/alpharogroup/crypto/model/**/*.class</exclude>
								<!-- interfaces -->
								<exclude>de/alpharogroup/auth/interfaces/**/*.class</exclude>
								<exclude>de/alpharogroup/auth/usermanagement/**/*.class</exclude>
								<exclude>de/alpharogroup/crypto/interfaces/**/*.class</exclude>
								<exclude>de/alpharogroup/random/api/**/*.class</exclude>
								<!-- exceptions -->
								<exclude>de/alpharogroup/exceptions/**/*.class</exclude>
								<!-- deprecated -->
								<exclude>de/alpharogroup/crypto/aes/**/*.class</exclude>
								<!-- constant classes with only constants -->
								<exclude>de/alpharogroup/random/address/**/*.class</exclude>
								<!-- explicit bean classes -->
								<exclude>de/alpharogroup/auth/Credentials.class</exclude>
								<exclude>de/alpharogroup/auth/SimplePermission.class</exclude>
								<exclude>de/alpharogroup/auth/SimpleRole.class</exclude>
								<exclude>de/alpharogroup/auth/SimpleUser.class</exclude>
								<!-- explicit deprecated classes -->
								<exclude>de/alpharogroup/crypto/key/KeyExtensions.class</exclude>
								<!-- explicit interfaces -->
								<exclude>de/alpharogroup/crypto/keyrules/Obfuscatable.class</exclude>
								<!-- explicit constant classes with only constants -->
								<exclude>de/alpharogroup/random/Constants.class</exclude>
								<!-- explicit delegation classes -->
								<exclude>de/alpharogroup/random/DataGenerator.class</exclude>
							</excludes>
						</instrumentation>
					</configuration>
					<executions>
						<execution>
							<goals>
								<goal>clean</goal>
							</goals>
						</execution>
					</executions>
				</plugin>

			</plugins>

		</pluginManagement>

		<plugins>

			<plugin>
				<inherited>true</inherited>
				<artifactId>maven-compiler-plugin</artifactId>
			</plugin>

			<plugin>
				<inherited>true</inherited>
				<artifactId>maven-source-plugin</artifactId>
			</plugin>

			<plugin>
				<inherited>true</inherited>
				<artifactId>maven-eclipse-plugin</artifactId>
			</plugin>

		</plugins>

	</build>

</project>
